    shrink = no
    transparency = 0
    padding = 12
    horizontal_padding = 12
    frame_width = 1
    outer_frame_width = 4
    separator_height = 1

    frame_color = "#af5f5f"
    outer_frame_color = "#1c1c1c"
    separator_color = "#878787"
    sort = yes
    idle_threshold = 120

    font = monospace 8
    line_height = 1

    markup = full

    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    format = "<i>%a </i>\n\n<b>%s </b>\n%b"
    alignment = right
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    icon_position = left
    max_icon_size = 50
    icon_path = .icons/flattrcolor/status/24:.icons/flattrcolor/devices/48:.icons/flattrcolor/apps/scalable:.icons/flattrcolor/actions/scalable

